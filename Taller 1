#include <iostream>
#include <iomanip>
#include <cmath>
#include <fstream>
#include <sstream>
#include <stdlib.h>

using namespace std;
const string rutaArchivo="estaturas.csv";

struct Aula{
  float aula1[20];
  float aula2[20];
};


struct Aula leerDatosDesdeArchivo(const string& rutaArchivo){
  ifstream archivo(rutaArchivo);
  Aula miAula;
  string linea;
  int i = 0;
  if(archivo.fail()){
    cout<<"No se pudo abrir el archivo"<<endl;
    exit(1);
  }

  getline(archivo, linea);

  while (getline(archivo, linea)){
    istringstream ss(linea);
    string valor;

    getline(ss,valor,',');
    miAula.aula1[i] = stof(valor);

    getline(ss,valor,',');
    miAula.aula2[i] = stof(valor);
    
    i++;
    
  }
  return miAula;
  
}

int calcularNumIntervalos(int tamano){
  int numIntervalos;
  numIntervalos = ceil(1 + 3.3 * log10(tamano));
  return numIntervalos;
}



void OrdenarDatos(float datos[], int tam){
  float aux=0;
  bool bandera = false;
  while (!bandera){
    bandera = true;
    for(int i = 0; i < tam; i++){
      if(datos[i] > datos[i+1]){
        aux = datos[i];
        datos[i] = datos[i+1];
        datos[i+1] = aux;
        bandera = false;
      }
    } 
  }

}
  

  
