}


int main(){
  struct Aula miAula;
  int tamano=20;
  float ancho[2];
  miAula=leerDatosDesdeArchivo(rutaArchivo);
  OrdenarDatos();
  CalcularAnchoIntervalo(tamano, miAula, ancho);
